{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": false,
    "skipLibCheck": true,
    "types": ["node"],
    "resolveJsonModule": true,
    "noImplicitAny": false
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules", "dist", "**/node_modules/**"]
}